<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_NETMaui.ContactPage"
             Title="ContactPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="logo.png"
         SemanticProperties.Description="My Favorite Restaurant List"
         HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="TastyHeaven" VerticalOptions="End" />
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label FontAttributes="Bold" Text="&#10;Contact us at:" />
        <Label Text="instragram: @tastyheaven"></Label>
        <Label Text="email: contact.tastyheaven@gmail.com"></Label>
    </VerticalStackLayout>
</ContentPage>